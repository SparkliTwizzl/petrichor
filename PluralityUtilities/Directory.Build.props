<Project>

  <PropertyGroup>
    <BuildDir>_build\</BuildDir>
    <InputDir>_input\</InputDir>
    <DebugRunDir>_run\</DebugRunDir>
    <DebugOutputDir>$(DebugRunDir)output\</DebugOutputDir>
    <DebugLogDir>$(DebugRunDir)log\</DebugLogDir>
    <AutoGeneratedProjectName>AutoGeneratedFiles</AutoGeneratedProjectName>
    <AutoGeneratedProjectPath>$(SolutionDir)$(AutoGeneratedProjectName)\</AutoGeneratedProjectPath>
    <AutoGeneratedFilesPath>$(AutoGeneratedProjectPath)PreBuildOutput\</AutoGeneratedFilesPath>
  </PropertyGroup>

  <PropertyGroup>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <BaseIntermediateOutputPath>$(BuildDir)$(MSBuildProjectName)\obj\</BaseIntermediateOutputPath>
    <IntermediateOutputPath>$(BaseIntermediateOutputPath)$(Configuration)\</IntermediateOutputPath>
    <BaseOutputPath>$(BuildDir)$(MSBuildProjectName)\bin\</BaseOutputPath>
    <OutputPath>$(BaseOutputPath)$(Configuration)\</OutputPath>
  </PropertyGroup>

</Project>
