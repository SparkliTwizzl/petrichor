<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>$(SolutionName).$(MSBuildProjectName)</AssemblyName>
    <RootNamespace>$(SolutionName).$(MSBuildProjectName)</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <ProjectDirectoriesClass>"$(AutoGeneratedFilesPath)ProjectDirectories.cs"</ProjectDirectoriesClass>
  </PropertyGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="if not exist $(AutoGeneratedFilesPath) mkdir $(AutoGeneratedFilesPath)" />
    <Exec Command="@echo //AUTO-GENERATED FILE, DO NOT EDIT; ANY CHANGES WILL BE OVERWRITTEN DURING BUILD&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo.&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo using System.Diagnostics;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo using System.Reflection;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo.&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo.&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo namespace $(SolutionName).$(AutoGeneratedProjectName)&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo {&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo     public static class ProjectDirectories&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo     {&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public const string BuildDir = @&quot;$(BuildDir)&quot;;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public const string InputDir = @&quot;$(InputDir)&quot;;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public const string DebugLogDir = @&quot;$(DebugLogDir)&quot;;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public const string DebugOutputDir = @&quot;$(DebugOutputDir)&quot;;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public static readonly string DebugRunDir = $@&quot;{ExecutingDir}$(DebugRunDir)&quot;;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public static readonly string ExecutingDir = Path.GetDirectoryName(Assembly.GetExecutingAssembly().Location);&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public static readonly string ReleaseLogDir = $@&quot;{ExecutingDir}\{Process.GetCurrentProcess().ProcessName}_log\&quot;;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public static readonly string ReleaseOutputDir = ExecutingDir;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo.&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo #if DEBUG&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public static readonly string LogDir = DebugLogDir;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public static readonly string OutputDir = DebugOutputDir;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public static readonly string RunDir = $&quot;{ExecutingDir}{DebugRunDir}&quot;;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo #elif RELEASE&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public static readonly string LogDir = ReleaseLogDir;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public static readonly string OutputDir = ReleaseOutputDir;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo         public static readonly string RunDir = ExecutingDir;&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo #endif&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo     }&gt;&gt; $(ProjectDirectoriesClass)" />
    <Exec Command="@echo }&gt;&gt; $(ProjectDirectoriesClass)" />
  </Target>

</Project>
