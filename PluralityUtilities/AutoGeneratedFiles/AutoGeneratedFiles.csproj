<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>$(SolutionName).$(MSBuildProjectName)</AssemblyName>
    <RootNamespace>$(SolutionName).$(MSBuildProjectName.Replace(" ", ""))</RootNamespace>
  </PropertyGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="if not exist $(AutoGeneratedFilesPath) mkdir $(AutoGeneratedFilesPath)" />
    <Exec Command="@echo namespace $(SolutionName).$(AutoGeneratedProjectName)&gt; &quot;$(AutoGeneratedFilesPath)ProjectDirectories.cs&quot;" />
    <Exec Command="@echo {&gt;&gt; &quot;$(AutoGeneratedFilesPath)ProjectDirectories.cs&quot;" />
    <Exec Command="@echo     public static class ProjectDirectories&gt;&gt; &quot;$(AutoGeneratedFilesPath)ProjectDirectories.cs&quot;" />
    <Exec Command="@echo     {&gt;&gt; &quot;$(AutoGeneratedFilesPath)ProjectDirectories.cs&quot;" />
    <Exec Command="@echo         public const string SolutionDir = @&quot;$(SolutionDir)&quot;;&gt;&gt; &quot;$(AutoGeneratedFilesPath)ProjectDirectories.cs&quot;" />
    <Exec Command="@echo         public const string BuildDir = @&quot;$(BuildDir)&quot;;&gt;&gt; &quot;$(AutoGeneratedFilesPath)ProjectDirectories.cs&quot;" />
    <Exec Command="@echo         public const string RunDir = @&quot;$(RunDir)&quot;;&gt;&gt; &quot;$(AutoGeneratedFilesPath)ProjectDirectories.cs&quot;" />
    <Exec Command="@echo     }&gt;&gt; &quot;$(AutoGeneratedFilesPath)ProjectDirectories.cs&quot;" />
    <Exec Command="@echo }&gt;&gt; &quot;$(AutoGeneratedFilesPath)ProjectDirectories.cs&quot;" />
  </Target>

</Project>
