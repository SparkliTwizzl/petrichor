{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceRoot}/source/App/App.csproj"
            ],
        },
        {
            "label": "unit tests",
            "type": "shell",
            "dependsOn": "build",
            "command": "Get-ChildItem -Path ./source/ -Recurse -Filter *Tests.csproj | ForEach-Object { & dotnet test $_.FullName }",
        },
    ]
}
