{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceRoot}/source/App/App.csproj"
            ],
        },
        {
            "label": "unit tests",
            "type": "shell",
            "command": "Get-ChildItem -Path ./source/ -Recurse -Filter *Tests.csproj | ForEach-Object { $_.FullName | ForEach-Object { dotnet test \"$_\" } }",
        },
        {
            "label": "build & test",
            "dependsOn": [
                "build",
                "unit tests",
            ],
        },
    ]
}
