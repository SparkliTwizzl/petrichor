{
    "version": "0.2.0",
    "configurations": [
        {
            //TODO: should not look for default file, actually; does not make log file (update: fails because of empty default file)
            "name": "default command",
            "type": "coreclr",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceRoot}/build/App/bin/Petrichor.exe",
            "args": [
                "--autoExit",
            ],
        },
        {
            //TODO: maybe works? does not make log file (update: log file fails b/c of empty defaults)
            "name": "default command --help",
            "type": "coreclr",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceRoot}/build/App/bin/Petrichor.exe",
            "args": [
                "--help",
                "--autoExit",
            ],
        },
        {
            //TODO: all options default to empty strings?? does not make log file (update: log file fails b/c of empty defaults)
            "name": "generateRandomStrings default",
            "type": "coreclr",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceRoot}/build/App/bin/Petrichor.exe",
            "args": [
                "generateRandomStrings",
                "--autoExit",
            ],
        },
        {
            "name": "generateRandomStrings CLI args",
            "type": "coreclr",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceRoot}/build/App/bin/Petrichor.exe",
            "args": [
                "generateRandomStrings",
                "--autoExit",
                "--allowedCharacters", "\"0123456789abcdef-_\"",
                "--logMode", "all",
                "--logFile", "\"${workspaceRoot}/test/log/integration/\"",
                "--outputFile", "\"${workspaceRoot}/test/output/integration/generateRandomStrings_cli.ext\"",
                "--stringCount", "5",
                "--stringLength", "20"
            ],
        },
        {
            "name": "generateRandomStrings file args",
            "type": "coreclr",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceRoot}/build/App/bin/Petrichor.exe",
            "args": [
                "${workspaceRoot}/test/input/integration/generateRandomStrings_file.petrichor",
            ],
        },
        {
            "name": "generateTextShortcutScript default",
            "type": "coreclr",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceRoot}/build/App/bin/Petrichor.exe",
            "args": [
                "generateTextShortcutScript",
                "--autoExit",
            ],
        },
        {
            "name": "generateTextShortcutScript CLI args",
            "type": "coreclr",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceRoot}/build/App/bin/Petrichor.exe",
            "args": [
                "generateTextShortcutScript",
                "--autoExit",
                "--inputFile", "\"${workspaceRoot}/test/input/integration/generateTextShortcutScript_cli.petrichor\"",
                "--logFile", "\"${workspaceRoot}/test/log/integration/\"",
                "--logMode", "all",
                "--outputFile", "\"${workspaceRoot}/test/output/integration/generateTextShortcutScript_cli.ext\""
            ],
        },
        {
            "name": "generateTextShortcutScript file args",
            "type": "coreclr",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceRoot}/build/App/bin/Petrichor.exe",
            "args": [
                "${workspaceRoot}/test/input/integration/generateTextShortcutScript_file.petrichor",
            ],
        },
    ],
    "compounds": [
        {
            "name": "All tests Debug",
            "configurations": [
                "default command",
                "default command --help",
                "generateRandomStrings default",
                "generateRandomStrings CLI args",
                "generateRandomStrings file args",
                "generateTextShortcutScript default",
                "generateTextShortcutScript CLI args",
                "generateTextShortcutScript file args",
            ],
            "preLaunchTask": "unit tests Debug",
            "stopAll": true
        },
        {
            "name": "All tests Release",
            "configurations": [
                "default command",
                "default command --help",
                "generateRandomStrings default",
                "generateRandomStrings CLI args",
                "generateRandomStrings file args",
                "generateTextShortcutScript default",
                "generateTextShortcutScript CLI args",
                "generateTextShortcutScript file args",
            ],
            "preLaunchTask": "unit tests Release",
            "stopAll": true
        },
    ]
}
